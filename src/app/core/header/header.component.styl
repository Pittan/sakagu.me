$color-nogi2 = #812990
$color-keyaki2 = #62B85A

:host
  position fixed
  top 0
  left 0
  width 100%
  height 50px
  border-bottom 1px solid #e0e0e0
  display flex

.header-container
  flex 1
  padding 0 20px
  display flex
  align-items center

.title
  font-size 20px

.spacer
  flex 1

.link
  border-radius 30px
  font-size 14px
  cursor pointer
  margin-left 15px
  padding 5px 15px
  -webkit-tap-highlight-color rgba(0,0,0,0)

  &.keyaki2
    border 1px solid $color-keyaki2
    color $color-keyaki2

    &:hover
      color #fff
      background-color $color-keyaki2

  &.nogi2
    border 1px solid $color-nogi2
    color $color-nogi2

    &:hover
      color #fff
      background-color $color-nogi2
